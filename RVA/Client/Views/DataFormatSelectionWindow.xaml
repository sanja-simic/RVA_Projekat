<Window x:Class="TravelSystem.Client.Views.DataFormatSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Data Format" 
        Height="250" 
        Width="400"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Choose data storage format for the server:" 
                   FontSize="14" 
                   FontWeight="SemiBold"
                   Margin="0,0,0,20"
                   TextWrapping="Wrap"/>
        
        <!-- Format Options -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <RadioButton x:Name="XmlRadioButton" 
                         Content="XML - eXtensible Markup Language" 
                         GroupName="DataFormat"
                         Margin="0,5"
                         FontSize="12"/>
            
            <RadioButton x:Name="JsonRadioButton" 
                         Content="JSON - JavaScript Object Notation" 
                         GroupName="DataFormat"
                         IsChecked="True"
                         Margin="0,5"
                         FontSize="12"/>
            
            <RadioButton x:Name="CsvRadioButton" 
                         Content="CSV - Comma-Separated Values" 
                         GroupName="DataFormat"
                         Margin="0,5"
                         FontSize="12"/>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="OkButton" 
                    Content="OK" 
                    Width="80" 
                    Height="30"
                    Margin="0,0,10,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            
            <Button x:Name="CancelButton" 
                    Content="Cancel" 
                    Width="80" 
                    Height="30"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>