<Window x:Class="TravelSystem.Client.Views.AddEditDestinationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding WindowTitle}" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Town Name -->
        <Label Grid.Row="0" Content="Town Name:" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Text="{Binding TownName, UpdateSourceTrigger=PropertyChanged}" 
                 Height="25" Margin="0,5"/>
        
        <!-- Country Name -->
        <Label Grid.Row="2" Content="Country Name:" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBox Grid.Row="3" Text="{Binding CountryName, UpdateSourceTrigger=PropertyChanged}" 
                 Height="25" Margin="0,5"/>
        
        <!-- Stay Price By Day -->
        <Label Grid.Row="4" Content="Stay Price By Day (â‚¬):" FontWeight="Bold" Margin="0,10,0,0"/>
        <TextBox Grid.Row="5" Text="{Binding StayPriceByDay, UpdateSourceTrigger=PropertyChanged}" 
                 Height="25" Margin="0,5" VerticalAlignment="Top"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Width="80" Height="30" Margin="0,0,10,0" 
                   Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Cancel" Width="80" Height="30" 
                   Command="{Binding CancelCommand}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>