<Window x:Class="TravelSystem.Client.Views.AddEditArrangementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{Binding WindowTitle}" Height="600" Width="700"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="ErrorTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Red"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,2,0,5"/>
        </Style>
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="InputStyle" TargetType="FrameworkElement">
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Destination Section -->
        <GroupBox Grid.Row="0" Header="Destination" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Select Destination:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                         ItemsSource="{Binding AvailableDestinations}"
                         SelectedItem="{Binding SelectedDestination, ValidatesOnDataErrors=True}"
                         DisplayMemberPath="TownName"
                         Style="{StaticResource InputStyle}"
                         Height="30"/>
                
                <TextBlock Grid.Row="1" Grid.Column="1" 
                          Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource AncestorType=ComboBox}}"
                          Style="{StaticResource ErrorTextStyle}"/>
            </Grid>
        </GroupBox>
        
        <!-- Travel Details Section -->
        <GroupBox Grid.Row="1" Header="Travel Details" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Transportation:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                         ItemsSource="{Binding TransportationModes}"
                         SelectedItem="{Binding SelectedTransportation}"
                         Style="{StaticResource InputStyle}"
                         Height="30"/>
                
                <Label Grid.Row="0" Grid.Column="2" Content="Number of Days:" Style="{StaticResource LabelStyle}" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" 
                        Text="{Binding NumberOfDays, ValidatesOnDataErrors=True}"
                        Style="{StaticResource InputStyle}"
                        Height="30"/>
                
                <TextBlock Grid.Row="1" Grid.Column="3" 
                          Text="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource AncestorType=TextBox}}"
                          Style="{StaticResource ErrorTextStyle}"/>
                
                <Label Grid.Row="2" Grid.Column="0" Content="State:" Style="{StaticResource LabelStyle}"/>
                <ComboBox Grid.Row="2" Grid.Column="1" 
                         ItemsSource="{Binding States}"
                         SelectedItem="{Binding SelectedState}"
                         Style="{StaticResource InputStyle}"
                         Height="30"/>
                
                <Label Grid.Row="2" Grid.Column="2" Content="Total Price:" Style="{StaticResource LabelStyle}" Margin="10,0,0,0"/>
                <TextBox Grid.Row="2" Grid.Column="3" 
                        Text="{Binding TotalPrice, StringFormat=C, Mode=OneWay}"
                        IsReadOnly="True"
                        Background="LightGray"
                        Style="{StaticResource InputStyle}"
                        Height="30"/>
            </Grid>
        </GroupBox>
        
        <!-- Passengers Section -->
        <GroupBox Grid.Row="2" Header="Passengers" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Available Passengers -->
                <Label Grid.Row="0" Grid.Column="0" Content="Available Passengers:" Style="{StaticResource LabelStyle}"/>
                <ListBox Grid.Row="1" Grid.Column="0" 
                        ItemsSource="{Binding AvailablePassengers}"
                        SelectedItem="{Binding SelectedPassengerToAdd}"
                        DisplayMemberPath="FullName"
                        Margin="5"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        Height="200"/>
                
                <!-- Buttons -->
                <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center">
                    <Button Content="Add &gt;&gt;" 
                           Command="{Binding AddPassengerCommand}"
                           Margin="5"
                           Height="30"/>
                    <Button Content="&lt;&lt; Remove" 
                           Command="{Binding RemovePassengerCommand}"
                           Margin="5"
                           Height="30"/>
                </StackPanel>
                
                <!-- Selected Passengers -->
                <Label Grid.Row="0" Grid.Column="2" Content="Selected Passengers:" Style="{StaticResource LabelStyle}"/>
                <ListBox Grid.Row="1" Grid.Column="2" 
                        ItemsSource="{Binding SelectedPassengers}"
                        SelectedItem="{Binding SelectedPassengerInList}"
                        DisplayMemberPath="FullName"
                        Margin="5"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        Height="200"/>
                
                <TextBlock Grid.Row="2" Grid.Column="2" 
                          Text="{Binding SelectedPassengers.Count, StringFormat='Total: {0} passengers'}"
                          Margin="5"
                          FontStyle="Italic"
                          Foreground="Gray"/>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" 
                   Command="{Binding SaveCommand}"
                   IsDefault="True"
                   Width="80" 
                   Height="35" 
                   Margin="5"
                   Background="#2E86AB"
                   Foreground="White"
                   BorderThickness="0"
                   FontWeight="SemiBold"/>
            <Button Content="Cancel" 
                   Command="{Binding CancelCommand}"
                   IsCancel="True"
                   Width="80" 
                   Height="35" 
                   Margin="5"/>
        </StackPanel>
    </Grid>
</Window>