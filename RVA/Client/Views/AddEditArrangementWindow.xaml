<Window x:Class="TravelSystem.Client.Views.AddEditArrangementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Travel Arrangement" Height="500" Width="600"
        WindowStartupLocation="CenterOwner" ResizeMode="CanMinimize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Destination Section -->
        <GroupBox Grid.Row="0" Header="Destination" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Town:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" Name="TownTextBox" Margin="5" Padding="5"/>
                
                <Label Grid.Row="0" Grid.Column="2" Content="Country:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="CountryTextBox" Margin="5" Padding="5"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Price per day:" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" Name="PricePerDayTextBox" Margin="5" Padding="5"/>
            </Grid>
        </GroupBox>
        
        <!-- Travel Details Section -->
        <GroupBox Grid.Row="1" Header="Travel Details" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Label Grid.Row="0" Grid.Column="0" Content="Transportation:" VerticalAlignment="Center"/>
                <ComboBox Grid.Row="0" Grid.Column="1" Name="TransportationComboBox" Margin="5" Padding="5"/>
                
                <Label Grid.Row="0" Grid.Column="2" Content="Number of days:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <TextBox Grid.Row="0" Grid.Column="3" Name="NumberOfDaysTextBox" Margin="5" Padding="5"/>
                
                <Label Grid.Row="1" Grid.Column="0" Content="Total Price:" VerticalAlignment="Center"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Name="TotalPriceTextBlock" Margin="5" Padding="5" 
                          Background="LightGray" VerticalAlignment="Center"/>
            </Grid>
        </GroupBox>
        
        <!-- Passengers Section -->
        <GroupBox Grid.Row="2" Header="Passengers" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <DataGrid Grid.Row="0" Name="PassengersDataGrid" 
                         AutoGenerateColumns="False" 
                         CanUserAddRows="False"
                         Margin="0,0,0,10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="First Name" Binding="{Binding FirstName}" Width="*"/>
                        <DataGridTextColumn Header="Last Name" Binding="{Binding LastName}" Width="*"/>
                        <DataGridTextColumn Header="Passport" Binding="{Binding PassportNumber}" Width="*"/>
                        <DataGridTextColumn Header="Luggage (kg)" Binding="{Binding LuggageWeight}" Width="80"/>
                    </DataGrid.Columns>
                </DataGrid>
                
                <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="AddPassengerButton" Content="Add Passenger" Margin="0,0,10,0" 
                           Padding="10,5" Click="AddPassengerButton_Click"/>
                    <Button Name="RemovePassengerButton" Content="Remove Passenger" 
                           Padding="10,5" Click="RemovePassengerButton_Click"/>
                </StackPanel>
            </Grid>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="SaveButton" Content="Save" Width="80" Height="30" 
                   Margin="0,0,10,0" Click="SaveButton_Click" IsDefault="True"/>
            <Button Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                   Click="CancelButton_Click" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>