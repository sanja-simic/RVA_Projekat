<Window x:Class="TravelSystem.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TravelSystem.Client"
        mc:Ignorable="d"
        Title="Travel Management System" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#2E86AB" Padding="10">
            <TextBlock Text="Travel Management System" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Content -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Travel Arrangements">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Travel Arrangements List -->
                    <DataGrid Grid.Column="0" 
                             Name="TravelArrangementsDataGrid"
                             Margin="0,0,10,0"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             MouseDoubleClick="TravelArrangementsDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Destination" Binding="{Binding Destination.TownName}" Width="120"/>
                            <DataGridTextColumn Header="Country" Binding="{Binding Destination.CountryName}" Width="100"/>
                            <DataGridTextColumn Header="Transportation" Binding="{Binding AssociatedTransportation}" Width="100"/>
                            <DataGridTextColumn Header="Days" Binding="{Binding NumberOfDays}" Width="60"/>
                            <DataGridTextColumn Header="Total Price" Binding="{Binding TotalPrice, StringFormat='{}{0:C}'}" Width="100"/>
                            <DataGridTextColumn Header="State" Binding="{Binding State}" Width="80"/>
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat='{}{0:yyyy-MM-dd}'}" Width="80"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    
                    <!-- Buttons Panel -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <Button Name="AddButton" Content="Add New" Height="30" Margin="0,5" Click="AddButton_Click"/>
                        <Button Name="EditButton" Content="Edit" Height="30" Margin="0,5" Click="EditButton_Click"/>
                        <Button Name="DeleteButton" Content="Delete" Height="30" Margin="0,5" Click="DeleteButton_Click"/>
                        <Button Name="RefreshButton" Content="Refresh" Height="30" Margin="0,5" Click="RefreshButton_Click"/>
                        <Separator Margin="0,10"/>
                        <Button Name="ConnectButton" Content="Connect to Server" Height="30" Margin="0,5" Click="ConnectButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            
            <TabItem Header="Passengers">
                <Grid>
                    <TextBlock Text="Passenger management will be implemented here." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>
            
            <TabItem Header="Destinations">
                <Grid>
                    <TextBlock Text="Destination management will be implemented here." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="Gray"/>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Status Bar -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <TextBlock Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
